generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  phone  String?
  email String
employmentDetails Employee? @relation(fields: [empId],references: [id])
empId Int @unique
}

model Employee{
  id Int @id @default(autoincrement())
  type String
  salary Int
user User?
  depId Int
  department Department? @relation(fields: [depId] , references: [id])
}

model Department{
  id Int @id @default(autoincrement())
name String @unique
employees Employee[]
}
