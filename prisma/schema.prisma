generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(uuid())
  name              String
  phone             String?
  email             String
  employmentDetails Employee? @relation(fields: [empId], references: [id] ,  onDelete: Cascade, onUpdate: Cascade)
  empId             String      @unique
}

model Employee {
  id         String         @id @default(uuid())
  type       String
  salary     Int
  user       User?
  depId      String
  department Department? @relation(fields: [depId], references: [id],  onDelete: Cascade, onUpdate: Cascade)
}

model Department {
  id        String        @id @default(uuid())
  name      String     @unique
  employees Employee[]
}
